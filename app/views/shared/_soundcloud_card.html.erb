<div class="universal-card feed-card">
  <div class="post-title">
    <% if post.artist.photo %>
      <%= link_to artist_path(post.artist) do %>
        <%= cl_image_tag post.artist.photo.key, class: "feed-avatar"%>
      <% end %>
    <% end %>
    <h3><%= post.artist.name %> posted on <span style="color:#ff4200"><%= post.source %></span></h3>
  </div>
  <% if post.contents %>
    <iframe style="margin-top: 8px;" width="100%" height="179" scrolling="no" frameborder="no" allow="autoplay"
      src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= post.contents[0].data %>&color=%23ff5500&auto_play=false&hide_related=true&show_comments=true&show_user=true&show_reposts=false&show_teaser=false&visual=true">
    </iframe>
  <% end %>
  <div class="card-share">
    <i class="fal fa-retweet"></i>
    <i class="fal fa-heart"></i>
  </div>
</div>
