<div class="universal-card feed-card">
  <div class="post-title">
    <% if post.artist.photo %>
      <%= link_to artist_path(post.artist) do %>
        <%= cl_image_tag post.artist.photo.key, class: "feed-avatar"%>
      <% end %>
    <h3><%= post.artist.name %> posted on <span style="color:#FF0000"><%= post.source %></span></h3>
    <% end %>
  </div>
  <% if post.contents %>
      <iframe style="margin-top: 8px;" width="318" height="179" src="https://<%= post.contents[0].data %>" frameborder="0" allowfullscreen></iframe>
  <% end %>
  <div class="card-share">
    <i class="fal fa-retweet"></i>
    <i class="fal fa-heart"></i>
  </div>
</div>

